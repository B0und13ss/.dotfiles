#!/usr/bin/env python3
import subprocess

choice = subprocess.run("echo -e '󰩬 Area\n  Active\n󰹑  Screen' | rofi -theme-str '@import \"screenshot\"' -dmenu", shell=True, capture_output=True, text=True)

choice = choice.stdout
choice = choice.strip()

# Execute action based on choice

if choice == "󰩬 Area":
    subprocess.run("sleep 0.2", shell=True)
    subprocess.run("grimblast copy area", shell=True)
elif choice == "  Active":
    subprocess.run("sleep 0.2", shell=True)
    subprocess.run("grimblast copy active", shell=True)
elif choice == "󰹑  Screen":
    subprocess.run("sleep 0.2", shell=True)
    subprocess.run("grimblast copy output", shell=True)
